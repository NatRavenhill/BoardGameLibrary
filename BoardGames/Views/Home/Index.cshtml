@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/index.css" type="text/css" />
<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @{
        if (Model.GameDetails.Any())
        {
            <h2> Popular Games</h2>
            <p> Here are the most popular games:</p>

            <div id="gamesCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#gamesCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#gamesCarousel" data-slide-to="1"></li>
                    <li data-target="#gamesCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.GameDetails[0].ImageLink" class="d-block" alt="...">
                        <h3>
                            <a asp-controller="AddGame" asp-action="GameDetail"
                               asp-route-id="@Model.GameDetails[0].BBGId">@Model.GameDetails[0].Name</a>
                        </h3>
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.GameDetails[2].ImageLink" class="d-block" alt="...">
                        <h3>
                            <a asp-controller="AddGame" asp-action="GameDetail"
                               asp-route-id="@Model.GameDetails[2].BBGId">@Model.GameDetails[2].Name</a>
                        </h3>
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.GameDetails[5].ImageLink" class="d-block" alt="...">
                        <h3>
                            <a asp-controller="AddGame" asp-action="GameDetail"
                               asp-route-id="@Model.GameDetails[5].BBGId">@Model.GameDetails[5].Name</a>
                        </h3>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#gamesCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#gamesCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }
        else
        {
            <p>There are no games! Go to Add Games to add some.</p>
        }
    }




</div>
